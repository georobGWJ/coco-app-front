<div class="col-sm-6 col-sm-offset-3" stye="text-align: center">
<h2>Sign Up</h2>

<form {{action "submit" on="submit"}}>

  <label for="userType">User Type</label><br>
  <table>
    <tr>
      <td style="padding-right:15px;">Parent</td>
      <td>{{radio-button value='parent' checked=user.userType}}</td>
    </tr>
    <tr>
      <td style="padding-right:15px;">Student</td>
      <td>{{radio-button value='student' checked=user.userType}}</td>
    </tr>
  </table>
  <br>

  <label for="name">First Name</label>
  {{input value=user.firstName placeholder="enter first name" class="form-control"}}

   <label for="name">Last Name</label>
  {{input value=user.lastName placeholder="enter last name" class="form-control"}}

  <label for="email">Email</label>
  {{input value=user.email placeholder="enter email" class="form-control"}}

  <label for="phoneNumber">Phone Number</label>
  {{input value=user.phoneNumber placeholder="enter phone number" class="form-control"}}<br>

  <label for="gradeLevel">Grade Level</label><br>
  <table>
    <tr>
      <td style="padding-right:15px;">Grade 9</td>
      <td>{{radio-button value=9 checked=user.gradeLevel}}</td>
    </tr>
    <tr>
      <td style="padding-right:15px;">Grade 10</td>
      <td>{{radio-button value=10 checked=user.gradeLevel}}</td>
    </tr>
    <tr>
      <td style="padding-right:15px;">Grade 11</td>
      <td>{{radio-button value=11 checked=user.gradeLevel}}</td>
    </tr>
    <tr>
      <td style="padding-right:15px;">Grade 12</td>
      <td>{{radio-button value=12 checked=user.gradeLevel}}</td>
    </tr>
  </table>
  <br>

  <label for="streetAddress">Address</label>
  {{input value=user.streetAddress placeholder="enter address" class="form-control"}}

  <label for="city">City</label>
  {{input value=user.city placeholder="enter city" class="form-control"}}

  <label for="state">State</label>
  {{input value=user.state placeholder="CA" class="form-control"}}

  <label for="zipCode">Zip Code</label>
  {{input value=user.zipCode placeholder="enter zipcode" class="form-control"}}<br><br>

  <label for="langPreference">Preferred Language</label><br>
  <table>
    <tr>
      <td style="padding-right:15px;">English</td>
      <td>{{radio-button value='english' checked=user.langPreference}}</td>
    </tr>
    <tr>
      <td style="padding-right:15px;">Espa√±ol</td>
      <td>{{radio-button value='spanish' checked=user.langPreference}}</td>
    </tr>
  </table>
  <br>

  <label for="password">Password</label>
  {{input value=user.password type="password" placeholder="enter password" class="form-control my-form"}}

  <label for="passwordConfirmation">Password Confirmation</label>
  {{input value=user.passwordConfirmation type="password" placeholder="enter password again" class="form-control my-form"}}
  <br>
  <button type="submit" class="btn btn-default">Register</button>
</form>

{{error-display errorMessage=errorMessage}}

</div>
